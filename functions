const fs = require("fs")


const writeToKeyStore = (name, data) => {

    fs.writeFile("./keys/" + name, data, (err)=>{
        if(err) {
            console.log(err)
        }

        console.log("keystore file created")
    })

}

const getKeyStore = (file) => {

    fs.readFile(file, "utf-8", (err, wallet)=>{
        if (err) {
            console.log(err)
        }

        console.log(wallet)
    })

}

module.exports = {getKeyStore, writeToKeyStore}